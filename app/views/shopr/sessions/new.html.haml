- @page_title =  t('shopr.sessions.admin_login')
= display_flash
.loginArea
  = form_tag :login, :class => 'login' do
    %p.field
      = text_field_tag 'email_address', params[:email_address], :class => 'focus', :placeholder => t('shopr.sessions.email')
    %p.field
      = password_field_tag 'password', params[:password], :class => '', :placeholder =>  t('shopr.sessions.password')
    %p.submit
      = submit_tag t('shopr.sessions.login'), :class => 'button green'
    %p.reset
      = link_to t('shopr.sessions.reset_password?'), login_reset_path
